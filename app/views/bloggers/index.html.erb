<p id="notice"><%= notice %></p>

<h1>Todos los Post del Blog</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Resumen</th>
      <th>Sec1</th>
      <th>Sec2</th>
      <th>Fotos</th>
      <th>Org</th>
      <th>Categoria</th>
      <th>Tag</th>
      <th>Publico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bloggers.each do |blogger| %>
      <tr>
        <td><%= blogger.titulo %></td>
        <td><%= blogger.resumen %></td>
        <td><%= blogger.sec1 %></td>
        <td><%= blogger.sec2 %></td>
        <td><%= image_tag blogger.minifoto %></td>
        <td><%= image_tag blogger.microfotosec %></td>
        <td><%= blogger.org %></td>
        <td><%= blogger.categoria %></td>
        <td><%= blogger.tag %></td>
        <td><%= blogger.publico %></td>
        <td><%= link_to 'Ver', blogger %></td>
        <td><%= link_to 'Editar', edit_blogger_path(blogger) %></td>
        <td><%= link_to 'Destruir', blogger, method: :delete, data: { confirm: 'EstÃ¡s segur@?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

